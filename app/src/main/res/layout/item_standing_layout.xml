<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/textViewRank"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textStyle="bold"
        tools:text="1" />

    <ImageView
        android:id="@+id/imageViewTeamLogoStanding"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        tools:src="@drawable/ic_placeholder_team_logo"
        android:contentDescription="@string/team_logo" />

    <TextView
        android:id="@+id/textViewTeamNameStanding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:textAppearance="?attr/textAppearanceBody1"
        tools:text="Team Name Long Display" />

    <TextView
        android:id="@+id/textViewPlayed"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="38" />

    <TextView
        android:id="@+id/textViewGoalDifference"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="+25" />

    <TextView
        android:id="@+id/textViewPoints"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textStyle="bold"
        tools:text="90" />
</LinearLayout>